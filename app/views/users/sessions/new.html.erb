<div class="devise-form mt-5 col-md-5 col-lg-5 col-xl-4 pd-3 m-auto">
  <h2 class="text-muted text-center"> Sign in </h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "text-black-50 small" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded-pill" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "text-black-50 small" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control rounded-pill" %>
    </div>
    <!--
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    -->

    <div class="row mt-3 actions">
      <div class="col-md-8">
        <span class="text-muted small"> Don't have account </span>
        <%= link_to "Sign up", new_registration_path(resource_name), class: 'small'%><br />
      </div>
      <div class="col-md-4">
      <%= f.submit "Log in", class: "btn btn-md rounded-pill btn-success w-100" %>
      </div>
    </div>
  <% end %>
</div>
