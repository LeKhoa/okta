
<div class="post mt-5">
<div class="row justify-content-center">
  <div class="col-md-7 col-12">

    <div class="row justify-content-end">
      <div class="col-md-3">
        <%= link_to 'Back', posts_path, class: 'btn btn-md rounded-pill btn-success w-100' %>
      </div>
    </div>
    <div class="border p-5 mt-3">
      <div class="text-center text-30px"> Post detail </div>
      <p>
        <strong>ID:</strong>
        <%= @post.id %>
      </p>
      <p>
        <strong>Title:</strong>
        <%= @post.title %>
      </p>
      
      <p>
        <strong>Text:</strong>
        <%= @post.text %>
      </p>
      <div class="col-md-3">
        <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-md btn-success rounded-pill w-100' %>
      </div>
    </div>
  </div>
</div>